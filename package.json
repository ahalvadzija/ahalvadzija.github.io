{
  "name": "website-portfolio",
  "version": "1.0.0",
  "scripts": {
    "css:watch": "npx @tailwindcss/cli -i ./assets/css/input.css -o ./static/css/style.css --watch",
    "css:build": "npx @tailwindcss/cli -i ./assets/css/input.css -o ./static/css/style.css --minify",
    "dev": "hugo server -D",
    "build": "npm run css:build && hugo --gc --minify && npx pagefind --site public"
  },
  "devDependencies": {
    "@tailwindcss/cli": "^4.2.0",
    "tailwindcss": "^4.2.0"
  },
  "dependencies": {
    "@tailwindcss/typography": "^0.5.19",
    "swup": "^4.8.2"
  }
}
